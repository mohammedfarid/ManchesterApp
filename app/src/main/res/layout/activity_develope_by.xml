<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context="com.farid.mohammed.manchesterapp.DevelopeByActivity">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/company_name"
            android:text="@string/company_name"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:gravity="center"/>
    <LinearLayout android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/company_add"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="مدينة نصر"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="@string/facebook_page"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:gravity="center"
                />
            <Button android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/facebtn"
                android:gravity="center"
                android:text="@string/facebook_pagebtn"
                android:background="@color/colorPrimaryLight"></Button>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:id="@+id/tele"
                android:text="@string/tele_num"
                android:textSize="20dp"
                android:textColor="@color/white"
                />
            <!--<TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:id="@+id/textTelee"
                android:text="@string/company_tele"
                android:textSize="20dp"
                android:textColor="@color/white"
                />-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/callbtn"
                android:text="@string/call"
                android:background="@color/colorPrimaryLight"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/website"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <Button android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/webbtn"
            android:gravity="center"
            android:text="@string/websitebtn"
            android:background="@color/colorPrimaryLight"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/email"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <Button android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/emailbtn"
            android:gravity="center"
            android:text="@string/emailbtn"
            android:background="@color/colorPrimaryLight"></Button>
    </LinearLayout>
    </LinearLayout>